#!/bin/bash
# Pre-push hook: runs before pushing to remote
# Install: git config core.hooksPath .githooks

set -e

echo "Running pre-push checks..."

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

# Get the remote and branch being pushed to
remote="$1"
url="$2"

# Read stdin for ref info
while read local_ref local_sha remote_ref remote_sha; do
    # Check if pushing to main/master
    if echo "$remote_ref" | grep -qE "refs/heads/(main|master)$"; then
        echo -e "${YELLOW}Pushing to protected branch: $(echo $remote_ref | sed 's|refs/heads/||')${NC}"

        # Run backend tests if Go files changed
        if git diff --name-only "$remote_sha..$local_sha" 2>/dev/null | grep -q "backend/"; then
            echo -n "Running backend tests... "
            if (cd backend && go test ./... > /dev/null 2>&1); then
                echo -e "${GREEN}PASSED${NC}"
            else
                echo -e "${RED}FAILED${NC}"
                echo "Backend tests failed. Fix before pushing to main."
                exit 1
            fi
        fi

        # Build check for backend
        if git diff --name-only "$remote_sha..$local_sha" 2>/dev/null | grep -q "backend/"; then
            echo -n "Checking backend builds... "
            if (cd backend && go build ./... > /dev/null 2>&1); then
                echo -e "${GREEN}OK${NC}"
            else
                echo -e "${RED}FAILED${NC}"
                echo "Backend build failed. Fix before pushing to main."
                exit 1
            fi
        fi
    fi
done

echo -e "${GREEN}Pre-push checks passed!${NC}"
